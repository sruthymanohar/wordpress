<VirtualHost *:{{ httpd_port| default(80) }}>
    DocumentRoot {{ dest }}
    <Directory {{ dest }}>
        Options FollowSymLinks
        AllowOverride Limit Options FileInfo
        DirectoryIndex index.php
        Require all granted
    </Directory>
    <Directory {{ dest }}/wp-content>
        Options FollowSymLinks
        Require all granted
    </Directory>
</VirtualHost>